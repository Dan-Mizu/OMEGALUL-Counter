{
	"compilerOptions": {
		"baseUrl": "./",
		"module": "esnext",
		"target": "es2017",

		"outDir": "./dist",

		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,

		"skipLibCheck": true,

		"moduleResolution": "Node",
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
